var win2 = Titanium.UI.createWindow({
    backgroundColor: 'black',
    title: 'FT Utility'
});

var win1 = Titanium.UI.iOS.createNavigationWindow({
   window: win2
});

var win3 = Titanium.UI.createWindow({
    backgroundColor: 'black',
    title: 'Sign-up'
});

var container = Ti.UI.createView({
	top: 20,
	//height: 300,
	width: "100%"
});
var formData = ["Username / Email", "Password", "Email", "Phone"];
var formView = Ti.UI.createScrollView({
	layout: "vertical",
	//backgroundColor: "#000",
	//borderRadius: 20,
	//borderColor: "#fff",
	top: 0,
	left: 10,
	right: 10,
});
var formView2 = Ti.UI.createScrollView({
	layout: "vertical",
	//backgroundColor: "#000",
	//borderRadius: 20,
	//borderColor: "#fff",
	top: 0,
	left: 10,
	right: 10,
});
var fieldHeight = 40;
var txt1 = Ti.UI.createTextField({
	  borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	  color: '#336699',
	  top: 10,
	  left: 10,
	  right: 10, 
	  height: fieldHeight,
	  hintText: formData[0]
});
var txt2 = Ti.UI.createTextField({
	  borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	  color: '#336699',
	  top: 10,
	  left: 10,
	  right: 10, 
	  height: fieldHeight,
	  hintText: formData[1]
});
var txt3 = Ti.UI.createTextField({
	  borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
	  color: '#336699',
	  top: 10,
	  left: 10,
	  right: 10, 
	  height: fieldHeight,
	  hintText: formData[2]
});

